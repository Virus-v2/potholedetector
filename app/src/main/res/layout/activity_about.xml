<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.reapbenefit.gautam.intern.potholedetectorbeta.Activities.AboutActivity">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This app is in beta"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="#ff0000"
                android:textSize="15dp"
                android:fontFamily="serif"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To help us improve the detection, please rate every trip using the slider shown after the trip"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="#00af00"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why are we doing this?"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"/>

            <TextView
                android:text="@string/about1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/textView2" />

            <TextView
                android:text="@string/about2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How can you help?"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp" />

            <TextView
                android:text="@string/about3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif-condensed"
                android:paddingTop="10dp" />

            <TextView
                android:text="intern.gautam@reapbenefit.org\n\n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textStyle="normal|bold|italic"
                android:onClick="sendEmail"/>


        </LinearLayout>
    </ScrollView>



