<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/easyframe"
    android:background="@drawable/notlogging_bg"
    tools:context="org.reapbenefit.gautam.intern.potholedetectorbeta.Fragments.EasyModeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_detecting"
        android:id="@+id/easytext"
        android:typeface="serif"
        android:textColor="#fff"
        android:textSize="25dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_launcher"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/easytext" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/easytext"
        android:layout_centerHorizontal="true"
        android:id="@+id/upload_progressbar" />

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_progressbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/restart"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_progressbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/progress" />


</RelativeLayout>
