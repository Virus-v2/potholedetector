<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/easyframe"
    android:background="@drawable/notlogging_bg"
    tools:context="org.reapbenefit.gautam.intern.potholedetectorbeta.Fragments.EasyModeFragment">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_launcher"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button_frame"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/start_stop_switch"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:id="@+id/button_frame">

    <Button
        android:id="@+id/start_trip_button"
        android:text="Start Trip"
        android:background="@drawable/button_border"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="normal|bold"
        android:drawableRight="@drawable/ic_media_play_dark"
        android:drawableTint="@color/colorAccent"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30sp"
        android:padding="15dp" />

    <Button
        android:id="@+id/stop_trip_button"
        android:text="Stop Trip"
        android:background="@drawable/stop_button_border"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="normal|bold"
        android:drawableRight="@drawable/ic_highlight_off"
        android:drawableTint="@color/colorAccent"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30sp"
        android:padding="15dp"
        android:visibility="gone"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/easytext"
        android:textSize="15dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_below="@+id/button_frame"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />


</RelativeLayout>
